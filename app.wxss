/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.page-body {
  padding: 20rpx 0;
}

.btn-area{
  margin-top: 60rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
}

.tc{
  text-align: center;
}
.list-msg {
    padding: 0;
    background-color: #fff;
    position: relative;
    
}
.select_box {
    background-color: #eee;
    padding: 0 10rpx;
    width: 100%;
    position: absolute;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
   
}